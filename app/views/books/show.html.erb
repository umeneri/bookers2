<h1>Book detail</h1>

<div>
  <p>image: <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>user： <%= link_to @book.user.name, user_path(@book.user.name) %></p>
  <p>title： <%= @book.title %></p>
  <p>opinion： <%= @book.body %></p>
  <% if @book.user == current_user %>
    <p><%= link_to 'Edit', edit_book_path(@book) %></p>
    <p><%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: "削除しますか？"} %></p>
  <% end %>
</div>